rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Admin has full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // By default, deny all reads and writes for non-admins unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and update their own profile.
    // Allow users to be created on signup.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      // Admins can manage users, so this is covered by the global admin rule.
      // No need for separate delete rule here for non-admins.
    }
    
    // Admins can manage cities, covered by global rule.
    match /Cities/{cityId} {
        allow read: if request.auth != null; // All users can read cities
    }

    // API Keys can only be managed by Admins. This rule is redundant
    // due to the global admin rule but provides explicit clarity.
    match /APIKeys/{keyId} {
      allow read, write, create, delete: if isAdmin();
    }

    // Allow a client to create an OTP document for their own email.
    // This rule is secure because the create operation is validated against
    // the incoming data. No one can create OTPs for other people.
    match /otp/{email} {
      allow create: if request.resource.data.email == email;
      // Deny all other operations from the client for security.
      // The server-side verifyOtpFlow handles reading and deleting.
      allow read, update, delete: if false;
    }
  }
}
