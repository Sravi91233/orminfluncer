rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admins can read and write all data.
    // This rule is checked first. If the user is an admin, they are granted access.
    // If not, Firestore proceeds to check the more specific rules below.
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow users to read and update their own profile.
    // Allow users to be created on signup.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow a client to create an OTP document for their own email.
    // This rule is secure because the create operation is validated against
    // the incoming data. No one can create OTPs for other people.
    match /otp/{email} {
      allow create: if request.resource.data.email == email;
      // Deny all other operations from the client for security.
      // The server-side verifyOtpFlow handles reading and deleting.
      allow read, update, delete: if false;
    }

    // Allow any authenticated user to read the list of cities for search functionality.
    // Admins have write access from the rule above.
    match /Cities/{city} {
      allow read: if request.auth != null;
    }
  }
}
