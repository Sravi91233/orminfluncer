rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admins can read and write all data.
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow users to read and update their own profile.
    // Allow users to be created on signup.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow a client to create an OTP document for their own email.
    match /otp/{email} {
      allow create: if request.resource.data.email == email;
      allow read, update, delete: if false;
    }

    // Allow any authenticated user to read the list of cities.
    match /Cities/{cityId} {
      allow read: if request.auth != null;
    }

    // Allow server-side functions (like our search flow) to read API Keys.
    // Deny all client-side access for security.
    match /APIKeys/{keyId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write, create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
